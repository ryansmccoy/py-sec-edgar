# py-sec-edgar Environment Configuration
# Copy this file to .env and customize for your specific environment.

# ============================================================================
# SEC Data Directory Configuration
# ============================================================================

# Primary data directory for SEC filings - mirrors SEC EDGAR structure
# Default: ./sec_data (relative to project root)
# Structure: ./sec_data/Archives/edgar/data/{CIK}/{accession-number}/
SEC_DATA_DIR=./sec_data

# ============================================================================
# SEC API Configuration (REQUIRED)
# ============================================================================

# User Agent (REQUIRED by SEC - must include company name and contact email)
# Format: "Company Name ContactEmail@domain.com"
# You MUST change this for production use
# Environment variable: SEC_USER_AGENT or USER_AGENT
USER_AGENT=py-sec-edgar Python Library contact@example.com

# ============================================================================
# Request Rate Limiting
# ============================================================================

# Delay between requests in seconds (SEC recommends max 10 requests/second)
# Default: 5.5 seconds (very conservative for reliability)
# Environment variable: SEC_REQUEST_DELAY or REQUEST_DELAY
REQUEST_DELAY=5.5

# Maximum number of retry attempts for failed requests
# Environment variable: SEC_MAX_RETRIES or MAX_RETRIES
MAX_RETRIES=3

# Request timeout in seconds
TIMEOUT=30

# ============================================================================
# Logging Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=WARNING

# Enable debug mode (verbose logging)
DEBUG=false

# ============================================================================
# Filing Processing Defaults
# ============================================================================

# Default forms to process (comma-separated list)
FORMS_LIST=10-K,10-Q,8-K,DEF 14A,13F-HR,SC 13G,SC 13D

# Default ticker symbols to process (comma-separated list)
DEFAULT_TICKERS=AAPL,MSFT,GOOGL,AMZN,TSLA

# Index date range settings (optional - defaults to last 2 years)
# INDEX_START_DATE=1/1/2023
# INDEX_END_DATE=12/31/2025

# Application name
# APP_NAME=SEC EDGAR Filing API

# ============================================================================
# PRODUCTION EXAMPLES (uncomment and modify for production)
# ============================================================================

# Production User Agent (REQUIRED - replace with your details)
# SEC_USER_AGENT=Acme Financial Analytics team@acme-financial.com

# Faster request rate for production (still respects SEC limits)
# SEC_REQUEST_DELAY=0.1

# Production data directory (absolute path recommended)
# SEC_DATA_DIR=/data/sec_filings

# Production logging
# LOG_LEVEL=INFO
# DEBUG=false
